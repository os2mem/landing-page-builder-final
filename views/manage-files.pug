extends layout.pug

block content
  include components/dashboard-bar.pug
  section.container-fluid.container-files
    table.table
      thead
        tr
          th
          th(scope="col") Nombre
          th(scope="col") Tama√±o
          th
      tbody#modal-files-content
        each file in files
          tr(data-imglocation=`/dist/files/${userDir}/${file.name}`, data-bg="image").img-files
            td.img-preview-td
              span.img-preview
                img(src=`/dist/files/${userDir}/${file.name}`, alt="")
            td
              span.img-title= file.name
            td= file.size
            td
      tfoot
        td
        td
        td
        td.text-right
          button(type="button").upload-file#upload-file.btn.btn-primary.mx-auto Subir imagen
          form.form-hidden(action="/upload", method="POST", enctype="multipart/form-data", id="upload-img")
            input.input__file.input-hidden#input-image(type="file", name="file" data-userFile-path=`/dist/files/${userDir}`)
  script(src="./dist/js/dashboard.bundle.js")
  script(src="./dist/js/managefiles.bundle.js")